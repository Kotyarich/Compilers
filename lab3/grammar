<программа> ->
    <блок>
<блок> ->
    { <список операторов> }
<список операторов> ->
    <оператор> <хвост> |
    <оператор>
<хвост> ->
    ; <оператор> <хвост> |
    ; <оператор>
<оператор> ->
    <идентификатор> = <выражение>
<выражение> ->
    <арифметическое выражение> <знак операции отношения> <арифметическое выражение>
<первичное выражение> ->
    <число> |
    <идентификатор> |
    ( <арифметическое выражение> )
<знак операции типа сложения> -> + | -
<знак операции типа умножения> -> * | / | %
<знак операции отношения> -> < | <= | = | >= | > | <>

<арифметическое выражение> ::
    <знак операции типа сложения> <терм> |
    <знак операции типа сложения> <терм> <арифметическое выражение 2> |
    <терм> |
    <терм> <арифметическое выражение 2>

<терм> ::
    <множитель> |
    <множитель> <терм 2>

<множитель> ::
    <первичноевыражение> |
    <первичноевыражение> <множитель 2>

<арифметическое выражение 2> ::
    <знак операции типа сложения> <терм> |
    <знак операции типа сложения> <терм> <арифметическое выражение 2>

<терм 2> ::
    <знак oперации типа умножения> <множитель> |
    <знак oперации типа умножения> <множитель> <терм 2>

<множитель 2> ::
    ^ <первичноевыражение> |
    ^ <первичноевыражение> <множитель 2>
